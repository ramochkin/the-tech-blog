<div class="post card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" id="post-id" name="post-id" value="{{post.id}}" />

        <label class="form-label" for="post-body">Rename here</label>
        <input id='postTitle' name="post-body" class="form-input" value="{{post.post_title}}">
        
        <label class="form-label" for="post-body">Content</label>
        <textarea id='textInput' name="post-body" class="form-input">{{post.content}}</textarea>

        
        <button type="submit" class="update-btn">Update</button>

        
        <button type="button" id="delete-btn" class="btn">Delete</button>
    </form>
</div>

<script src="/js/edit.js"></script>
